<div class="navbar py-2 mb-4">
  <%= link_to root_path, class: "navbar-logo" do %>
    <%= image_tag "fish.png" %>
  <% end %>

  <div class="nav-links">
    <ul>
      <% if user_signed_in? %>
        <div class="d-flex">
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= image_tag "https://static.vecteezy.com/system/resources/previews/002/275/847/original/male-avatar-profile-icon-of-smiling-caucasian-man-vector.jpg", class: "nav-avatar" %>
          </li>
        </div>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
