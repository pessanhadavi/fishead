<div class="d-flex justify-content-end mb-2">
  <%= link_to '<i class="fas fa-undo-alt"></i><span>Voltar</span>'.html_safe, quizroom_path(question.quizroom), class:"back-btn" %>
</div>
<div class="question-header">
  <h1><%= question.utterance %></h1>
</div>
<h2>Respostas:</h2>
<div id="answers" data-quizroom-id="<%= question.quizroom.id %>">
  <% answers.each do |answer| %>
    <%= render 'questions/show_teacher/answer', answer: answer %>
  <% end %>
</div>
